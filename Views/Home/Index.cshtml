@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold text-primary mb-4 animate__animated animate__fadeInLeft">
                    Öğrenme Yolculuğuna Hoş Geldiniz! 🌟
                </h1>
                <p class="lead mb-4 animate__animated animate__fadeInLeft animate__delay-1s">
                    Eğlenceli ve interaktif eğitim platformumuzda çocuğunuzun gelişimine katkıda bulunun.
                </p>
                <div class="row g-3 animate__animated animate__fadeInUp animate__delay-2s">
                    <div class="col-md-6">
                        <a href="@Url.Action("Register", "Account", new { type = "parent" })" class="btn btn-primary w-100 btn-lg register-btn">
                            <i class="fas fa-users me-2"></i>
                            Veli Olarak Kayıt Ol
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="@Url.Action("Register", "Account", new { type = "teacher" })" class="btn btn-success w-100 btn-lg register-btn">
                            <i class="fas fa-chalkboard-teacher me-2"></i>
                            Eğitmen Olarak Kayıt Ol
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center animate__animated animate__fadeInRight">
                <img src="/images/hero-illustration.svg" alt="Eğitim İllüstrasyonu" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</div>

<div class="quick-access py-5 bg-light">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="quick-access-card text-center h-100">
                    <div class="card-body">
                        <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
                        <h3 class="h4">Hemen Başla</h3>
                        <p class="text-muted mb-4">Platformumuza üye olarak eğitime hemen başlayın.</p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary">
                            Kayıt Ol
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-access-card text-center h-100">
                    <div class="card-body">
                        <i class="fas fa-info-circle fa-3x text-success mb-3"></i>
                        <h3 class="h4">Daha Fazla Bilgi</h3>
                        <p class="text-muted mb-4">Platformumuz hakkında detaylı bilgi alın.</p>
                        <a href="@Url.Action("About", "Home")" class="btn btn-success">
                            Bilgi Al
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-access-card text-center h-100">
                    <div class="card-body">
                        <i class="fas fa-graduation-cap fa-3x text-warning mb-3"></i>
                        <h3 class="h4">Eğitim Modüllerimiz</h3>
                        <p class="text-muted mb-4">Tüm eğitim içeriklerimizi inceleyin.</p>
                        <a href="@Url.Action("Index", "Education")" class="btn btn-warning">
                            Modülleri Gör
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Neler Sunuyoruz? 🎯</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h3 class="h4 mb-3">Eğitici İçerikler</h3>
                        <p class="text-muted">Yaş gruplarına özel hazırlanmış eğitici ve eğlenceli içerikler.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-chart-line fa-3x text-success"></i>
                        </div>
                        <h3 class="h4 mb-3">Gelişim Takibi</h3>
                        <p class="text-muted">Çocuğunuzun gelişimini adım adım takip edin ve raporlayın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-users fa-3x text-warning"></i>
                        </div>
                        <h3 class="h4 mb-3">Aile Katılımı</h3>
                        <p class="text-muted">Eğitim sürecine aktif katılım ve aile desteği.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="education-modules py-5">
    <div class="container">
        <h2 class="text-center mb-5">Eğitim Modüllerimiz 📚</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card module-card">
                    <div class="card-body text-center">
                        <i class="fas fa-paw fa-3x text-primary mb-3"></i>
                        <h4>Hayvanlar</h4>
                        <p class="small text-muted">Hayvanları tanıyın ve seslerini öğrenin</p>
                        <a href="/Education/Animals" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card module-card">
                    <div class="card-body text-center">
                        <i class="fas fa-book-reader fa-3x text-success mb-3"></i>
                        <h4>Masallar</h4>
                        <p class="small text-muted">Eğitici ve eğlenceli masallar</p>
                        <a href="/Education/Stories" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card module-card">
                    <div class="card-body text-center">
                        <i class="fas fa-video fa-3x text-danger mb-3"></i>
                        <h4>Videolar</h4>
                        <p class="small text-muted">Eğitici video içerikleri</p>
                        <a href="/Education/Videos" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card module-card">
                    <div class="card-body text-center">
                        <i class="fas fa-traffic-light fa-3x text-warning mb-3"></i>
                        <h4>Trafik İşaretleri</h4>
                        <p class="small text-muted">Trafik kurallarını öğrenin</p>
                        <a href="/Education/TrafficSigns" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 70vh;
        display: flex;
        align-items: center;
        padding: 4rem 0;
    }

    .hero-image {
        max-width: 80%;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
    }

    .quick-access-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        padding: 2rem;
    }

    .quick-access-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .feature-card {
        transition: all 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-10px);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(var(--bs-primary-rgb), 0.1);
    }

    .module-card {
        transition: all 0.3s ease;
        border-radius: 15px;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        cursor: pointer;
        height: 100%;
        margin-bottom: 2rem;
    }

    .module-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .btn {
        border-radius: 30px;
        padding: 12px 30px;
        font-weight: 600;
    }

    .animate__animated {
        animation-duration: 1s;
    }

    @@media screen and (max-width: 768px) {
        .hero-section {
            text-align: center;
            min-height: auto;
            padding: 3rem 0;
        }

        .hero-image {
            max-width: 60%;
            margin-top: 2rem;
        }

        .module-card {
            margin-bottom: 1rem;
        }
    }

    .register-btn {
        padding: 15px 25px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .register-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    }

    .btn-primary {
        background: linear-gradient(45deg, #4e73df 0%, #224abe 100%);
        border: none;
    }

    .btn-success {
        background: linear-gradient(45deg, #1cc88a 0%, #169b6b 100%);
        border: none;
    }

    /* Form input fixes */
    .form-floating .form-control {
        padding-left: 2.5rem;
    }

    .form-floating label {
        padding-left: 2.5rem;
    }

    .icon-wrapper {
        left: 0.75rem;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
