@{
    ViewData["Title"] = "İletişim";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <img src="/images/betul.jpg" alt="Betül Öztürk" class="rounded-circle mb-4" style="width: 200px; height: 200px; object-fit: cover;">
                        <h1 class="h2 mb-3">İletişim Bilgileri</h1>
                        <p class="lead text-muted">Proje ile ilgili sorularınız için benimle iletişime geçebilirsiniz.</p>
                    </div>

                    <div class="contact-info">
                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-user fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-1">Betül Öztürk</h3>
                                <p class="text-muted mb-0">Bilgisayar Mühendisliği Öğrencisi</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-university fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-1">İstanbul Gelişim Üniversitesi</h3>
                                <p class="text-muted mb-0">Bilgisayar Mühendisliği Bölümü</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-envelope fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h3 class="h5 mb-1">E-posta</h3>
                                <a href="mailto:betul.ozturk@ogr.gelisim.edu.tr" class="text-decoration-none">betul.ozturk@ogr.gelisim.edu.tr</a>
                            </div>
                        </div>

                        <div class="social-links mt-5">
                            <a href="https://www.linkedin.com/in/betul-ozturkk/" target="_blank" class="btn btn-outline-primary me-3">
                                <i class="fab fa-linkedin me-2"></i>LinkedIn
                            </a>
                            <a href="https://github.com/betulzzturkk" target="_blank" class="btn btn-outline-dark">
                                <i class="fab fa-github me-2"></i>GitHub
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-wrapper {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: rgba(13, 110, 253, 0.1);
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .social-links .btn {
        transition: all 0.3s ease;
    }

    .social-links .btn:hover {
        transform: translateY(-3px);
    }
</style> 