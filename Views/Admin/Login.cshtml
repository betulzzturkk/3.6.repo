@model AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Girişi";
    Layout = "_Layout";
}

<style>
    .login-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f6f9fc, #edf2f7);
        padding: 2rem 0;
    }

    .login-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .login-title {
        color: #2c3e50;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
    }

    .login-form input {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        width: 100%;
        transition: all 0.3s ease;
    }

    .login-form input:focus {
        outline: none;
        border-color: #3498db;
        box-shadow: 0 0 15px rgba(52,152,219,0.1);
    }

    .login-form button {
        background: #3498db;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 1rem;
        width: 100%;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .login-form button:hover {
        background: #2980b9;
        transform: translateY(-2px);
    }

    .validation-message {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: -0.5rem;
        margin-bottom: 1rem;
    }

    .admin-icon {
        font-size: 3rem;
        color: #3498db;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="login-section">
    <div class="container">
        <div class="login-card">
            <div class="admin-icon">
                <i class="fas fa-user-shield"></i>
            </div>
            <h1 class="login-title">Admin Girişi</h1>

            <form asp-action="Login" asp-controller="Admin" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="validation-message"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="E-posta" />
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Şifre" />
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <button type="submit">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Giriş Yap
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 