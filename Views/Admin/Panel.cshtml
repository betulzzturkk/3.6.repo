@using AutismEducationPlatform.Models.Enums
@model AutismEducationPlatform.Models.ViewModels.AdminPanelViewModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-4">
    <h2>Admin Paneli</h2>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcılar</h5>
                    <p class="card-text display-4">@ViewBag.UserCount</p>
                    <a asp-action="Users" class="btn btn-light">Detaylar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Çocuklar</h5>
                    <p class="card-text display-4">@ViewBag.ChildCount</p>
                    <a asp-action="Children" class="btn btn-light">Detaylar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Eğitim Modülleri</h5>
                    <p class="card-text display-4">@ViewBag.ModuleCount</p>
                    <a asp-action="Modules" class="btn btn-light">Detaylar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Haberler</h5>
                    <p class="card-text display-4">@ViewBag.NewsCount</p>
                    <a asp-action="News" class="btn btn-light">Detaylar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
} 