@model IEnumerable<AutismEducationPlatform.Models.Kullanici>
@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Kayıtlı Kullanıcılar</h1>
        <a asp-action="Cikis" class="btn btn-outline-danger">Çıkış Yap</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>E-posta</th>
                            <th>Kullanıcı Tipi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kullanici in Model)
                        {
                            <tr>
                                <td>@kullanici.Ad</td>
                                <td>@kullanici.Soyad</td>
                                <td>@kullanici.Email</td>
                                <td>
                                    <span class="badge @(kullanici.KullaniciTipi == "Veli" ? "bg-primary" : "bg-success")">
                                        @kullanici.KullaniciTipi
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        background-color: #f8f9fa;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 1em;
    }
</style> 