@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3 mt-5">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h1 class="display-6 mb-3">Admin Girişi</h1>
                    </div>

                    <form asp-controller="Admin" asp-action="Giris" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" name="kullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required>
                            <label>Kullanıcı Adı</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" name="sifre" class="form-control" placeholder="Şifre" required>
                            <label>Şifre</label>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: #fff;
        transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #0d6efd;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        padding: 0.8rem 1rem;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
    }
</style> 