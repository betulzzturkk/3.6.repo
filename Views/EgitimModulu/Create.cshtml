@model AutismEducationPlatform.Models.EgitimModulu

@{
    ViewData["Title"] = "Yeni Eğitim Modülü";
}

<div class="container">
    <h1 class="my-4">Yeni Eğitim Modülü</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Ad" class="control-label">Modül Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Aciklama" class="control-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ModulTipi" class="control-label">Modül Tipi</label>
                    <select asp-for="ModulTipi" class="form-control">
                        <option value="">Seçiniz...</option>
                        <option value="Renkler">Renkler</option>
                        <option value="Hayvanlar">Hayvanlar</option>
                        <option value="Şekiller">Şekiller</option>
                        <option value="TrafikLevhalari">Trafik Levhaları</option>
                        <option value="Selamlaşma">Selamlaşma</option>
                    </select>
                    <span asp-validation-for="ModulTipi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResimYolu" class="control-label">Resim</label>
                    <input type="file" name="Resim" class="form-control" accept="image/*" />
                    <span asp-validation-for="ResimYolu" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SesYolu" class="control-label">Ses Dosyası</label>
                    <input type="file" name="Ses" class="form-control" accept="audio/*" />
                    <span asp-validation-for="SesYolu" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 