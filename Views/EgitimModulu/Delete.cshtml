@model AutismEducationPlatform.Models.EgitimModulu

@{
    ViewData["Title"] = "Eğitim Modülü Sil";
}

<h1>Eğitim Modülü Sil</h1>

<h3>Bu modülü silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Modül Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModulAdi)
        </dd>

        <dt class="col-sm-2">
            Modül Tipi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModulTipi)
        </dd>

        <dt class="col-sm-2">
            Resim
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ResimYolu))
            {
                <img src="@Model.ResimYolu" alt="@Model.ModulAdi" style="max-width: 200px;" />
            }
            else
            {
                <span>Resim yok</span>
            }
        </dd>

        <dt class="col-sm-2">
            Ses
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.SesYolu))
            {
                <audio controls>
                    <source src="@Model.SesYolu" type="audio/mpeg">
                    Tarayıcınız ses dosyasını desteklemiyor.
                </audio>
            }
            else
            {
                <span>Ses dosyası yok</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div> 