@model AutismEducationPlatform.Models.EgitimModulu

@{
    ViewData["Title"] = "Eğitim Modülü Sil";
}

<div class="container">
    <h1 class="my-4">Eğitim Modülü Sil</h1>

    <div class="alert alert-danger">
        <h4>Bu eğitim modülünü silmek istediğinizden emin misiniz?</h4>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Modül Adı</dt>
                <dd class="col-sm-9">@Model.Ad</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Aciklama</dd>

                <dt class="col-sm-3">Modül Tipi</dt>
                <dd class="col-sm-9">@Model.ModulTipi</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.ResimYolu))
            {
                <div class="mb-3">
                    <strong>Mevcut Resim:</strong>
                    <img src="@Model.ResimYolu" alt="@Model.Ad" style="max-width: 200px;" class="img-thumbnail mt-2" />
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SesYolu))
            {
                <div class="mb-3">
                    <strong>Mevcut Ses:</strong>
                    <div class="mt-2">
                        <audio controls>
                            <source src="@Model.SesYolu" type="audio/mpeg">
                            Tarayıcınız ses dosyasını desteklemiyor.
                        </audio>
                    </div>
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Listeye Dön
        </a>
    </form>
</div> 