@section Scripts {
    <script>
        // Hayvan seslerini çalma ve ilerlemeyi kaydetme
        function playAnimalSound(animal) {
            const audio = new Audio(`/sounds/animals/${animal}.mp3`);
            
            audio.onended = function() {
                // Kullanıcı giriş yapmışsa ilerlemeyi kaydet
                if (@Json.Serialize(User.Identity.IsAuthenticated)) {
                    markAsCompleted(animal);
                }
            };
            
            audio.play();
        }

        // Tamamlanan hayvanları işaretleme
        function markAsCompleted(animal) {
            const card = document.querySelector(`[data-animal="${animal}"]`);
            const icon = card.querySelector('.completion-icon');
            icon.style.display = 'inline-block';

            // İlerleme durumunu sunucuya kaydet
            saveProgress(animal);

            // İlerleme çubuğunu güncelle
            updateProgress();
        }

        // İlerleme durumunu sunucuya kaydetme
        function saveProgress(animal) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Animals',
                    itemName: animal,
                    isCompleted: true
                })
            });
        }

        // İlerleme çubuğunu güncelleme
        function updateProgress() {
            const totalAnimals = document.querySelectorAll('.animal-card').length;
            const completedAnimals = document.querySelectorAll('.completion-icon[style="display: inline-block"]').length;
            const progressPercentage = (completedAnimals / totalAnimals) * 100;

            const progressBar = document.getElementById('moduleProgress');
            if (progressBar) {
                progressBar.style.width = `${progressPercentage}%`;
                progressBar.textContent = `${Math.round(progressPercentage)}%`;
                progressBar.setAttribute('aria-valuenow', progressPercentage);
            }
        }

        // Sayfa yüklendiğinde önceki ilerlemeyi yükle
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User.Identity.IsAuthenticated)) {
                fetch('/Education/GetProgress?moduleName=Animals')
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(item => {
                            if (item.isCompleted) {
                                const card = document.querySelector(`[data-animal="${item.itemName}"]`);
                                if (card) {
                                    const icon = card.querySelector('.completion-icon');
                                    icon.style.display = 'inline-block';
                                }
                            }
                        });
                        updateProgress();
                    });
            }
        });
    </script>
}

