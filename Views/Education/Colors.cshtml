@section Scripts {
    <script>
        // Renk seslerini çalma ve ilerlemeyi kaydetme
        function playColorSound(color) {
            const audio = new Audio(`/sounds/colors/${color}.mp3`);
            
            audio.onended = function() {
                // Kullanıcı giriş yapmışsa ilerlemeyi kaydet
                if (@Json.Serialize(User.Identity?.IsAuthenticated == true)) {
                    markAsCompleted(color);
                }
            };
            
            audio.play();
        }

        // Tamamlanan renkleri işaretleme
        function markAsCompleted(color) {
            const card = document.querySelector(`[data-color="${color}"]`);
            const icon = card.querySelector('.completion-icon');
            icon.style.display = 'inline-block';

            // İlerleme durumunu sunucuya kaydet
            saveProgress(color);

            // İlerleme çubuğunu güncelle
            updateProgress();
        }

        // İlerleme durumunu sunucuya kaydetme
        function saveProgress(color) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Colors',
                    itemName: color,
                    isCompleted: true
                })
            });
        }

        // İlerleme çubuğunu güncelleme
        function updateProgress() {
            const totalColors = document.querySelectorAll('.color-card').length;
            const completedColors = document.querySelectorAll('.completion-icon[style="display: inline-block"]').length;
            const progressPercentage = (completedColors / totalColors) * 100;

            const progressBar = document.getElementById('moduleProgress');
            if (progressBar) {
                progressBar.style.width = `${progressPercentage}%`;
                progressBar.textContent = `${Math.round(progressPercentage)}%`;
                progressBar.setAttribute('aria-valuenow', progressPercentage);
            }
        }

        // Sayfa yüklendiğinde önceki ilerlemeyi yükle
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User.Identity?.IsAuthenticated == true)) {
                fetch('/Education/GetProgress?moduleName=Colors')
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(item => {
                            if (item.isCompleted) {
                                const card = document.querySelector(`[data-color="${item.itemName}"]`);
                                if (card) {
                                    const icon = card.querySelector('.completion-icon');
                                    icon.style.display = 'inline-block';
                                }
                            }
                        });
                        updateProgress();
                    });
            }
        });
    </script>
}

