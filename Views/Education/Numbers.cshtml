@section Scripts {
    <script>
        // Sayı seslerini çalma ve ilerlemeyi kaydetme
        function playNumberSound(number) {
            const audio = new Audio(`/sounds/numbers/${number}.mp3`);
            
            audio.onended = function() {
                // Kullanıcı giriş yapmışsa ilerlemeyi kaydet
                if (@Json.Serialize(User.Identity?.IsAuthenticated == true)) {
                    markAsCompleted(number);
                }
            };
            
            audio.play();
        }

        // Tamamlanan sayıları işaretleme
        function markAsCompleted(number) {
            const card = document.querySelector(`[data-number="${number}"]`);
            const icon = card.querySelector('.completion-icon');
            icon.style.display = 'inline-block';

            // İlerleme durumunu sunucuya kaydet
            saveProgress(number);

            // İlerleme çubuğunu güncelle
            updateProgress();
        }

        // İlerleme durumunu sunucuya kaydetme
        function saveProgress(number) {
            fetch('/Education/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    moduleName: 'Numbers',
                    itemName: number,
                    isCompleted: true
                })
            });
        }

        // İlerleme çubuğunu güncelleme
        function updateProgress() {
            const totalNumbers = document.querySelectorAll('.number-card').length;
            const completedNumbers = document.querySelectorAll('.completion-icon[style="display: inline-block"]').length;
            const progressPercentage = (completedNumbers / totalNumbers) * 100;

            const progressBar = document.getElementById('moduleProgress');
            if (progressBar) {
                progressBar.style.width = `${progressPercentage}%`;
                progressBar.textContent = `${Math.round(progressPercentage)}%`;
                progressBar.setAttribute('aria-valuenow', progressPercentage);
            }
        }

        // Sayfa yüklendiğinde önceki ilerlemeyi yükle
        document.addEventListener('DOMContentLoaded', function() {
            if (@Json.Serialize(User.Identity?.IsAuthenticated == true)) {
                fetch('/Education/GetProgress?moduleName=Numbers')
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(item => {
                            if (item.isCompleted) {
                                const card = document.querySelector(`[data-number="${item.itemName}"]`);
                                if (card) {
                                    const icon = card.querySelector('.completion-icon');
                                    icon.style.display = 'inline-block';
                                }
                            }
                        });
                        updateProgress();
                    });
            }
        });
    </script>
}

