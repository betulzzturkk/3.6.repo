@model AutismEducationPlatform.Models.KayitViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3 mt-5">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h1 class="display-6 mb-3">Kayıt Ol</h1>
                        <p class="text-muted">Hesap oluşturarak eğitimlere erişebilirsiniz</p>
                    </div>

                    <form asp-controller="Kullanici" asp-action="Kayit" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Ad" class="form-control" placeholder="Ad">
                                    <label asp-for="Ad">Ad</label>
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Soyad" class="form-control" placeholder="Soyad">
                                    <label asp-for="Soyad">Soyad</label>
                                    <span asp-validation-for="Soyad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com">
                            <label asp-for="Email">E-posta Adresi</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="KullaniciTipi" class="form-select">
                                <option value="">Kullanıcı tipi seçiniz</option>
                                <option value="Veli">Veli</option>
                                <option value="Egitmen">Eğitmen</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <label asp-for="KullaniciTipi">Kullanıcı Tipi</label>
                            <span asp-validation-for="KullaniciTipi" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Şifre">
                            <label asp-for="Password">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar">
                            <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
                            <a href="@Url.Action("Giris", "Kullanici")" class="btn btn-outline-secondary">
                                Zaten hesabınız var mı? Giriş yapın
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: #fff;
        transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-select:focus ~ label {
        color: #0d6efd;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        padding: 0.8rem 1rem;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 