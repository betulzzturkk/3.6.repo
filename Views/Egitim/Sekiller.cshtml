@{
    ViewData["Title"] = "Şekiller";
    var sekiller = new Dictionary<string, string> {
        {"Kare", "/images/kare.jpg"},
        {"Dikdörtgen", "/images/dikdortgen.jpg"},
        {"Üçgen", "/images/ucgen.jpg"},
        {"Daire", "/images/daire.jpg"},
        {"Çember", "/images/cember.jpg"},
        {"Altıgen", "/images/altigen.jpg"},
        {"Yıldız", "/images/yildiz.jpg"},
        {"Kalp", "/images/kalp.jpg"}
    };
}

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Egitim")" class="btn btn-outline-primary me-3">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
        <h1>Şekiller</h1>
    </div>

    <div class="row g-4">
        @foreach (var sekil in sekiller)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <!-- Görsel -->
                        <div class="mb-3 image-container" style="height: 250px; border-radius: 8px; overflow: hidden; background-color: #f8f9fa;">
                            <img src="@sekil.Value" alt="@sekil.Key" class="img-fluid h-100 w-100" style="object-fit: contain;" />
                        </div>
                        
                        <!-- Şekil adı -->
                        <h5 class="card-title mb-3 display-6">@sekil.Key</h5>
                        
                        <!-- Ses çalma butonu -->
                        <button class="btn btn-primary w-100" onclick="playSound('@sekil.Key')">
                            <i class="fas fa-volume-up me-2"></i> Sesi Dinle
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .image-container {
        transition: transform 0.2s;
        cursor: pointer;
        border: 2px solid #e9ecef;
    }

    .image-container:hover {
        transform: scale(1.05);
    }

    .card {
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .display-6 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #0d6efd;
    }
</style>

@section Scripts {
    <script>
        function playSound(sekil) {
            // Ses dosyası eklendiğinde burada çalınacak
            console.log(sekil + " sesi çalınacak");
        }
    </script>
} 