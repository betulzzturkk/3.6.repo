@{
    ViewData["Title"] = "Sayılar";
    var sayilar = new Dictionary<string, string> {
        {"Sıfır", "/images/sıfır.jpg"},
        {"Bir", "/images/bir.jpg"},
        {"İki", "/images/iki.jpg"},
        {"Üç", "/images/üç.jpg"},
        {"Dört", "/images/dört.jpg"},
        {"Beş", "/images/beş.jpg"},
        {"Altı", "/images/altı.jpg"},
        {"Yedi", "/images/yedi.jpg"},
        {"Sekiz", "/images/sekiz.jpg"},
        {"Dokuz", "/images/dokuz.jpg"}
    };
}

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Egitim")" class="btn btn-outline-primary me-3">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
        <h1>Sayılar</h1>
    </div>

    <div class="row g-4">
        @foreach (var sayi in sayilar)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <!-- Görsel -->
                        <div class="mb-3 image-container" style="height: 250px; border-radius: 8px; overflow: hidden;">
                            <img src="@sayi.Value" alt="@sayi.Key" class="img-fluid h-100 w-100" style="object-fit: cover;" />
                        </div>
                        
                        <!-- Sayı -->
                        <h5 class="card-title mb-3 display-4">@sayi.Key</h5>
                        
                        <!-- Ses çalma butonu -->
                        <button class="btn btn-primary w-100" onclick="playSound('@sayi.Key')">
                            <i class="fas fa-volume-up me-2"></i> Sesi Dinle
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .image-container {
        transition: transform 0.2s;
        cursor: pointer;
    }

    .image-container:hover {
        transform: scale(1.05);
    }

    .card {
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .display-4 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
    }
</style>

@section Scripts {
    <script>
        function playSound(sayi) {
            // Ses dosyası eklendiğinde burada çalınacak
            console.log(sayi + " sesi çalınacak");
        }
    </script>
} 