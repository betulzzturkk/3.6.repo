@{
    ViewData["Title"] = "Görgü Kuralları";
}

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Egitim")" class="btn btn-outline-primary me-3">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
        <h1>Görgü Kuralları</h1>
    </div>

    <div class="row g-4">
        @foreach (var kural in new[] { "Teşekkür Etmek", "Günaydın Demek", "Rica Etmek", "Özür Dilemek", "Sofra Adabı", "Selamlaşma" })
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3" style="height: 200px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                            <span class="text-muted">[Resim gelecek]</span>
                        </div>
                        <h5 class="card-title">@kural</h5>
                        <button class="btn btn-primary mt-2" onclick="playSound('@kural')">
                            <i class="fas fa-volume-up"></i> Dinle
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function playSound(kural) {
            // Ses dosyası eklendiğinde burada çalınacak
            console.log(kural + " sesi çalınacak");
        }
    </script>
} 